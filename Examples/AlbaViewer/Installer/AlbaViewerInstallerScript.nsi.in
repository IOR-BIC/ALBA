SectionEnd

Function "EraseFirstRun"
	Pop $0
	ReadRegStr $0 HKU "$0\Software\Microsoft\Windows\CurrentVersion\Explorer\Shell Folders" "AppData"
	${If} $0 != ""
	Delete "$0\${PRODUCT_NAME}\FirstRun"  
	${EndIf}
	
FunctionEnd

